{
  "name": "riot-enzyme",
  "version": "0.1.3",
  "description": "Enzyme wrapper for Riot",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run-script build",
    "pretest": "tsc --noEmit && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "prettier \"**/*.ts\" -l",
    "lint:fix": "prettier \"**/*.ts\" --write"
  },
  "keywords": [
    "shallow rendering",
    "test",
    "riotjs",
    "riot.js",
    "testing",
    "testing utils",
    "assertion helpers",
    "tdd",
    "enzyme"
  ],
  "author": "Karak",
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.106",
    "@types/riot": "^3.6.1",
    "jest": "^22.4.3",
    "prettier": "^1.11.1",
    "riot": "^3.9.0",
    "ts-jest": "^22.4.2",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-utils": "^1.3.0",
    "lodash": "^4.17.5",
    "riot-test-renderer-shared": "^0.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karak/riot-test-renderer"
  }
