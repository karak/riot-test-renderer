{
  "name": "riot-enzyme",
  "version": "0.2.0",
  "description": "Enzyme wrapper for Riot",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist; tsc -p .",
    "prepublishOnly": "npm run-script build",
    "pretest": "tsc --noEmit && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "prettier \"**/*.ts\" -l",
    "lint:fix": "prettier \"**/*.ts\" --write"
  },
  "keywords": [
    "shallow rendering",
    "test",
    "riotjs",
    "riot.js",
    "testing",
    "testing utils",
    "assertion helpers",
    "tdd",
    "enzyme"
  ],
  "author": "Karak",
  "license": "MIT",
  "dependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-utils": "^1.3.0",
    "lodash": "^4.17.5",
    "riot": "^3.9.1",
    "riot-test-renderer-shared": "^0.2.0",
    "riot-test-utils": "^0.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karak/riot-test-renderer"
  },
  "devDependencies": {
    "jest": "^22.4.3"
  }
}
